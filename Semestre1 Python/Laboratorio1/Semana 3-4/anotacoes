
def operacao(a, b, op):
    match op:
        case "+":
            return a+b
        case "-":
            return a-b
        case "*":
            return a*b
        case "/":
            return a/b
        case _:
            raise ValueError("Operacao invalida")

num1 = int(input("Diigte o primeiro numero: "))

conta = input("Digite a operacao: ")

num2 = int(input("Digite o segundo numero: "))

resultado = operacao(num1, num2, conta)
print(resultado)